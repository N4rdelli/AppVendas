@model AppVendasWeb.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<h4 class="display-4 text-light">Detalhes da Categoria</h4>

<div>
    <hr />
    <h4>Categoria</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="text-light text-decoration-none me-3">
        <svg bootstrap-icon="Arrow90DegLeft" width="13" height="13" aria-label="Adicionar" class="me-1"></svg>
        Voltar
    </a>
    <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="text-decoration-none btn btn-outline-light justify-content-center">
        <svg bootstrap-icon="PencilFill" width="14" height="14" aria-label="Adicionar" class="me-2"></svg>
        Editar
    </a>
</div>
