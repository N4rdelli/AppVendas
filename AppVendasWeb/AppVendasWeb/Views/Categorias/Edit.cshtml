@model AppVendasWeb.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h4 class="display-4 text-light">Editar Categoria</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group mb-2">
                <label asp-for="CategoriaNome" class="control-label"></label>
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
            <div class="form-group me-2">
                <input type="submit" value="Salvar" class="btn btn-outline-light" />
            </div>
        </form>
        <div>
            <a asp-action="Index" class="text-light text-decoration-none me-3">
                <svg bootstrap-icon="Arrow90DegLeft" width="13" height="13" aria-label="Adicionar" class="me-1"></svg>
                Voltar
            </a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
