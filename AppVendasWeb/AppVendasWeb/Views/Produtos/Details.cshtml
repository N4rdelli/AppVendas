@model AppVendasWeb.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h4 class="display-6 textoCor">Detalhes do Produto</h4>
    <hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="textoCor text-decoration-none me-3">
        <svg bootstrap-icon="Arrow90DegLeft" width="13" height="13" aria-label="Adicionar" class="me-1"></svg>
        Voltar
    </a>
    <a asp-action="Edit" asp-route-id="@Model?.ProdutoId" class="text-decoration-none btn bttnClass justify-content-center">
        <svg bootstrap-icon="PencilFill" width="14" height="14" aria-label="Adicionar" class="me-2"></svg>
        Editar
    </a>
</div>
