@model AppVendasWeb.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h2 class="display-2 text-danger">Deletar</h2>

<h4>Você tem certeza que quer deletar esse produto?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>
    </dl>
    
    <div>
        <form asp-action="Delete">
            <a asp-action="Index" class="text-light text-decoration-none me-3">
                <svg bootstrap-icon="Arrow90DegLeft" width="13" height="13" aria-label="Adicionar" class=""></svg>
                Voltar
            </a>
            <input type="hidden" asp-for="ProdutoId" />
            <input type="submit" value="Deletar" class="btn btn-danger me-3" />
        </form>
    </div>
</div>
