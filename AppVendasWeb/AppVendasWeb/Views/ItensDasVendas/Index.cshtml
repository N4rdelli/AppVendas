@model IEnumerable<AppVendasWeb.Models.ItemDaVenda>

@{
    ViewData["Title"] = "Itens das Vendas";
}

<h3 class="display-6 textoTitulo">Itens das Vendas</h3>

<p>
    <a asp-action="Create" asp-route-id=@ViewData["VendaId"] class="btn bttnClass align-content-center align-items-center">
        <svg bootstrap-icon="PlusLg" width="20" height="20" aria-label="Adicionar" class="me-3"></svg>Novo Item
    </a>
</p>
<hr />
<div class="table-responsive">
    <table class="table bg-transparent textoCor">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venda.NotaFiscal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.ItemDaVendaId" class="text-decoration-none textoCor">
                            <svg bootstrap-icon="PencilFill" width="14" height="14" aria-label="Adicionar" class="me-2"></svg>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ItemDaVendaId" class="text-decoration-none textoCor">
                            <svg bootstrap-icon="CardList" width="14" height="14" aria-label="Adicionar" class="me-2"></svg>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ItemDaVendaId" class="text-decoration-none textoCor">
                            <svg bootstrap-icon="Trash2" width="14" height="14" aria-label="Adicionar" class="me-2"></svg>
                        </a>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>