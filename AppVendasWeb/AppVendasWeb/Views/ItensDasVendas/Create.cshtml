@model AppVendasWeb.Models.ItemDaVenda

@{
    ViewData["Title"] = "Create";
}

<h4 class="display-6 text-light">Registrar Detalhes</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class ="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VendaId" class="control-label"></label>
                <select asp-for="VendaId" class ="form-control" asp-items="ViewBag.VendaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Registrar" class="btn btn-outline-light" />
            </div>
        </form>
        <a asp-action="Index" class="text-light text-decoration-none">
            <svg bootstrap-icon="Arrow90DegLeft" width="13" height="13" aria-label="Adicionar" class=""></svg>
            Voltar
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
