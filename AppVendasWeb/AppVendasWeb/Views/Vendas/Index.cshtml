@model IEnumerable<AppVendasWeb.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<h3 class="display-6 textoTitulo">Vendas</h3>

<p>
    <a asp-action="Create" class="btn bttnClass align-content-center align-items-center">
        <svg bootstrap-icon="PlusLg" width="20" height="20" aria-label="Adicionar" class="me-3"></svg>Nova Venda
    </a>
</p>
<hr />
<div class="table-responsive">
    <table class="table bg-transparent textoCor">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotaFiscal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotaFiscal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteNome)
            </td>
                    <td class="text-end">
                        <a asp-action="Index" asp-controller="ItensDasVendas" asp-route-id="@item.VendaId" class="text-decoration-none btn textoCor">
                            <svg bootstrap-icon="PlusLg" width="20" height="20" aria-label="Adicionar" class="me-3"></svg>Produtos
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.VendaId" class="text-decoration-none textoCor">
                            <svg bootstrap-icon="PencilFill" width="14" height="14" aria-label="Adicionar" class="me-2"></svg>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.VendaId" class="text-decoration-none textoCor">
                            <svg bootstrap-icon="Trash2" width="14" height="14" aria-label="Adicionar" class="me-2"></svg>
                        </a>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>